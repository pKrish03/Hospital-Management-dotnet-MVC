@model HospitalManagement.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="form-card">
    <h2 style="color: #dc3545;">
        <img src="~/images/patient-icon.png" alt="Patient" />
        Delete Patient
    </h2>

    <div class="alert alert-danger">
        <h4>⚠️ Are you sure you want to delete this patient?</h4>
        <p>This action cannot be undone. All patient information will be permanently removed.</p>
    </div>

    <div class="card" style="background: #f8f9fa; padding: 30px; border-radius: 10px; margin: 20px 0;">
        <h3>Patient Details:</h3>
        <hr />
        
        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Patient ID:</strong>
            </div>
            <div class="col-md-9">
                @Model.PatientId
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Name:</strong>
            </div>
            <div class="col-md-9">
                @Model.Name
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Age:</strong>
            </div>
            <div class="col-md-9">
                @Model.Age years
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Gender:</strong>
            </div>
            <div class="col-md-9">
                @Model.Gender
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Contact:</strong>
            </div>
            <div class="col-md-9">
                @Model.Contact
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Email:</strong>
            </div>
            <div class="col-md-9">
                @Model.Email
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Blood Group:</strong>
            </div>
            <div class="col-md-9">
                <span class="badge badge-info">@Model.BloodGroup</span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Address:</strong>
            </div>
            <div class="col-md-9">
                @Model.Address
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Registered Date:</strong>
            </div>
            <div class="col-md-9">
                @Model.RegisteredDate.ToString("dd MMM yyyy")
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PatientId" />
        
        <div class="mt-4">
            <button type="submit" class="btn btn-danger">Yes, Delete Patient</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>