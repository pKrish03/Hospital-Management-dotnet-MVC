@model HospitalManagement.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="form-card">
    <h2 style="color: #dc3545;">
        <img src="~/images/doctor-icon.png" alt="Doctor" />
        Delete Doctor
    </h2>

    <div class="alert alert-danger">
        <h4>⚠️ Are you sure you want to delete this doctor?</h4>
        <p>This action cannot be undone. All doctor information will be permanently removed.</p>
    </div>

    <div class="card" style="background: #f8f9fa; padding: 30px; border-radius: 10px; margin: 20px 0;">
        <h3>Doctor Details:</h3>
        <hr />
        
        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Doctor ID:</strong>
            </div>
            <div class="col-md-9">
                @Model.DoctorId
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Name:</strong>
            </div>
            <div class="col-md-9">
                @Model.Name
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Specialization:</strong>
            </div>
            <div class="col-md-9">
                <span class="badge badge-info">@Model.Specialization</span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Qualification:</strong>
            </div>
            <div class="col-md-9">
                @Model.Qualification
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Experience:</strong>
            </div>
            <div class="col-md-9">
                @Model.Experience years
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Contact:</strong>
            </div>
            <div class="col-md-9">
                @Model.Contact
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Email:</strong>
            </div>
            <div class="col-md-9">
                @Model.Email
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Consultation Fee:</strong>
            </div>
            <div class="col-md-9">
                ₹@Model.ConsultationFee
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Available Days:</strong>
            </div>
            <div class="col-md-9">
                @Model.AvailableDays
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Consultation Time:</strong>
            </div>
            <div class="col-md-9">
                @Model.ConsultationTime
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Joined Date:</strong>
            </div>
            <div class="col-md-9">
                @Model.JoinedDate.ToString("dd MMM yyyy")
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DoctorId" />
        
        <div class="mt-4">
            <button type="submit" class="btn btn-danger">Yes, Delete Doctor</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>