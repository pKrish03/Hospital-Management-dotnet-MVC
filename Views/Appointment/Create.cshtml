@model HospitalManagement.Models.Appointment

@{
    ViewData["Title"] = "Schedule New Appointment";
}

<div class="form-card">
    <h2>
        <img src="~/images/appointment-icon.png" alt="Appointment" />
        Schedule New Appointment
    </h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PatientId">Select Patient</label>
                    <select asp-for="PatientId" class="form-select" asp-items="ViewBag.Patients">
                        <option value="">-- Select Patient --</option>
                    </select>
                    <span asp-validation-for="PatientId" class="field-validation-error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DoctorId">Select Doctor</label>
                    <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.Doctors">
                        <option value="">-- Select Doctor --</option>
                    </select>
                    <span asp-validation-for="DoctorId" class="field-validation-error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AppointmentDate"></label>
                    <input asp-for="AppointmentDate" type="date" class="form-control" />
                    <span asp-validation-for="AppointmentDate" class="field-validation-error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AppointmentTime"></label>
                    <select asp-for="AppointmentTime" class="form-select">
                        <option value="">-- Select Time --</option>
                        <option value="9:00 AM">9:00 AM</option>
                        <option value="10:00 AM">10:00 AM</option>
                        <option value="11:00 AM">11:00 AM</option>
                        <option value="12:00 PM">12:00 PM</option>
                        <option value="2:00 PM">2:00 PM</option>
                        <option value="3:00 PM">3:00 PM</option>
                        <option value="4:00 PM">4:00 PM</option>
                        <option value="5:00 PM">5:00 PM</option>
                        <option value="6:00 PM">6:00 PM</option>
                    </select>
                    <span asp-validation-for="AppointmentTime" class="field-validation-error"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Reason"></label>
            <textarea asp-for="Reason" class="form-control" placeholder="Enter reason for appointment" rows="3"></textarea>
            <span asp-validation-for="Reason" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Notes"></label>
            <textarea asp-for="Notes" class="form-control" placeholder="Additional notes (optional)" rows="3"></textarea>
            <span asp-validation-for="Notes" class="field-validation-error"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Schedule Appointment</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}